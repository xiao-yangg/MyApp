<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/fl_calculator"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fl_pokemon"
        android:background="@drawable/circle_accent_border_ripple">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calculator"
            android:layout_gravity="center"
            android:textColor="@color/grey"
            android:textSize="22sp"
            android:textStyle="bold"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_pokemon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fl_calculator"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/circle_accent_border_ripple">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pokemon"
            android:layout_gravity="center"
            android:textColor="@color/grey"
            android:textSize="22sp"
            android:textStyle="bold"/>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>